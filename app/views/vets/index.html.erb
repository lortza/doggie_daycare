<h1 class="header-bk header-bk-vets">Veterinarians</h1>

<div class="row">
  <div class="col-md-6"> 
    <%= link_to ' Create New Vet', new_vet_path, class: "pull-left btn btn-default btn-xs fa fa-plus" %>
  </div> <!-- col-md-6 -->
  <!-- Search bar-->
  <div class="col-md-6">
    <div class="pullpull-right">       
        <%= form_tag("/vets", method: "get", role: "search", class: "navbar-form navbar-left") do %>
          <div class ="form-group">
            <%= text_field_tag(:search, nil, placeholder: "Vet Name", class: "form-control input-sm") %>
          </div>
        <%= submit_tag("Search for a Vet", class: "btn btn-default btn-xs") %>
        <% end %> <!--ends search bar-->
        <%= link_to 'Show All', vets_path, class: "btn btn-default btn-xs" %>
    </div> <!-- pull right-->
  </div> <!-- col-md-6 -->

</div> <!-- closes row -->

<p>&nbsp;</p>
<table class="table">
  <thead>
    <tr>
      <th>Veterinarian Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= link_to vet.name, vet %></td>
        <td><%= vet.phone %></td>
        <td><%= link_to ' View', vet, class: "btn btn-default btn-xs fa fa-binoculars" %></td>
        <td><%= link_to ' Edit', edit_vet_path(vet), class: "btn btn-default btn-xs fa fa-pencil" %></td>
        <td><%= link_to ' Delete', vet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs fa fa-trash" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

