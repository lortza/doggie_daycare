<h1>Veterinarians</h1>

<div class="row">
  <div class="col-md-12"> 
    <%= link_to ' Create New Vet', new_vet_path, class: "createbutton btn btn-default btn-xs fa fa-user-md" %>
  </div> <!-- col-md-12 -->
</div> <!-- closes row -->

<p>&nbsp;</p>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vets.each do |vet| %>
      <tr>
        <td><%= vet.name %></td>
        <td><%= vet.phone %></td>
        <td><%= link_to ' View', vet, class: "btn btn-default btn-xs fa fa-binoculars" %></td>
        <td><%= link_to ' Edit', edit_vet_path(vet), class: "btn btn-default btn-xs fa fa-pencil" %></td>
        <td><%= link_to ' Delete', vet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs fa fa-trash" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

