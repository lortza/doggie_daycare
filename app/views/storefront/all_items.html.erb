<h1>Camp Canine Store & Gift Shop</h1>
<p>For your regualr staples or a little something special for your furry friend. </p>

<h2>All Items</h2>

<div class="row">
  <% @products.each do |xproduct| %>
    <div class="col-sm-3">

    <!--TODO: this is how we made the whole div a link-->

      <div class="panel panel-default">
        <div class="panel-body">
        <p><a href="#" data-toggle="modal" data-target="#myModal_<%= xproduct.id%>">
     <%= image_tag xproduct.image.url(:medium), class: "img-responsive" %></a></p>
          <p><a href="#" data-toggle="modal" data-target="#myModal_<%= xproduct.id%>"><span class="glyphicon glyphicon-plus"></span>
     Quick Info</a></p>
          <h4><%= xproduct.name %></h4>
          <p><strong><%= number_to_currency xproduct.price %></strong></p>

          <!-- TODO: add product rating capability
          <p>Made By: <%#= xproduct.brand %></p>
          <p>
         <%# <% x.rating.times do %>
            <span class="glyphicon glyphicon-star yellow"></span>
          <%#<% end %>
          </p> -->

        </div><!--panel-body-->
      </div><!--panel panel-default-->
      
    </div><!--col-sm-3-->
    <!-- Modal -->
    <div class="modal fade" id="myModal_<%= xproduct.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel"><%= xproduct.name %></h4>
          </div>
          <div class="modal-body">
            <center><%= image_tag xproduct.image.url(:medium), class: "img-responsive" %></center>
            <p><%= number_to_currency xproduct.price %></p>
            <p><%= xproduct.description %></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-success" data-dismiss="modal"><i class="fa fa-cart-plus"></i> Add to Cart</button>
            <!-- TODO: remove or change to save to cart
            <button type="button" class="btn btn-primary">Save changes</button> -->
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div><!--row-->
