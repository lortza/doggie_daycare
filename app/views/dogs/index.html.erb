<h1>Canine Clients</h1>

<div class="row">
  <div class="col-md-12"> 
    <%= link_to ' Create New Dog', new_dog_path, class: "createbutton btn btn-default btn-xs fa fa-plus" %>
  </div> <!-- col-md-12 -->
</div> <!-- closes row -->

<div class="row">

<% @dogs.order("name").each do |dog| %>

<div class="col-md-3">
<%#<a href= dogs/<%= dog.id %> 

 <div class="panel panel-default <%= 'panel-success' if dog.in_daycare %>">
    <div class="panel-heading">
      <h3 class="panel-title"><%= link_to dog.name_ownerlast, dog %></h3>
    </div>

    <div class="panel-body">
    <%= link_to (image_tag dog.avatar.url(:medium), class: "img-responsive"), dog %>
    <%#<%= image_tag dog.avatar.url(:medium), class: "img-responsive" %>
    </div>
    <div class="panel-footer">
    <%= link_to ' ', dog, class: "fa fa-binoculars" %>
    <%= link_to ' ', edit_dog_path(dog), class: "fa fa-pencil" %>
    <%= link_to ' ', dog, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %>
    </div><!-- closes panel-footer -->
  </div><!-- closes panel -->

</div><!-- closes col-md-3 -->

<% end %> <!-- ends loop -->

</div> <!-- ends row -->


