<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="field form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: "form-control", placeholder: "123 Main Street\nGerkin, OH 17652" %>
  </div>
  <div class="field form-group">
    <%= f.label "Payment Type" %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, {prompt: "Select a Payment Method"}, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Place Order", class: "btn btn-success btn-sm" %>
  </div>
<% end %>
