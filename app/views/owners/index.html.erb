<h1>Dog Owners</h1>
<p>&nbsp;</p>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>Signed Waiver</th>
      <th>Emergency Contact</th>
      <th>Em. Phone</th>
      <th>View</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.street_address %></td>
        <td><%= owner.city %></td>
        <td><%= owner.zip %></td>
        <td><%= owner.signed_waiver %></td>
        <td><%= owner.emerg_contact %></td>
        <td><%= owner.emerg_phone %></td>
        <td><%= link_to ' ', owner, class: "fa fa-binoculars" %></td>
        <td><%= link_to ' ', edit_owner_path(owner), class: "fa fa-pencil" %></td>
        <td><%= link_to ' ', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "fa fa-trash" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-success btn-xs" %>
