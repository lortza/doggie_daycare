<p id="notice"><%= notice %></p>

<h1>Dog Owners</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Zip</th>
      <th>Signed waiver</th>
      <th>Emerg contact</th>
      <th>Emerg phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.street_address %></td>
        <td><%= owner.city %></td>
        <td><%= owner.zip %></td>
        <td><%= owner.signed_waiver %></td>
        <td><%= owner.emerg_contact %></td>
        <td><%= owner.emerg_phone %></td>
        <td><%= link_to 'Show', owner, class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner), class: "btn btn-default btn-xs" %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-success btn-xs" %>
